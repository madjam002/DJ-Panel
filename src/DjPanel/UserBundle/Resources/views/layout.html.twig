<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Login to DJ Panel</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
        {% stylesheets
            "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.no-icons.min.css"
            "bundles/djpanelmain/css/font-awesome.less"
            "bundles/djpanelmain/css/main.less"
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <style type="text/css">
            body {
                    padding: 0;
                    background-image: url("/bundles/djpanelmain/images/headerbg.jpg");
                    background-size: 48px 48px;
            }

            label a, .btn, input, label {
                    font-size: 14px !important;
            }

            form {
                    margin: 0 auto;
                    padding: 0;
                    position: relative;
                    width: 250px;
            }

            input[type=text],
            input[type=password] {
                    border: none;
                    height: 32px;
                    margin-bottom: 15px;
                    opacity: 0.9;
                    filter: ~"alpha(opacity=90)";
                    padding: 0 10px;
                    width: 100%;

                    box-sizing:border-box;
                    -moz-box-sizing:border-box; /* Firefox */
                    -webkit-box-sizing:border-box; /* Safari */

                    -webkit-box-shadow: none;
                    -moz-box-shadow: none;
                    box-shadow: none;
            }

            input[type=text]:focus,
            input[type=password]:focus {
                    opacity: 1;
                    filter: ~"alpha(opacity=100)";
            }

            label, label a:hover {
                    color: #bbb;
            }

            label a {
                    font-size: 12px !important;
                    color: #666;
            }

            .btn {
                    margin: 20px 0 0 0;
                    line-height: 26px;
                    border: none;
            }

            a.header {
                    display: block;
                    margin-bottom: 30px;
                    font-size: 16px;
                    line-height: 25px;
                    padding-left: 75px;
                    color: #fff;
            }

            a.header span {
                position: relative;
                left: 10px;
            }

            a.header:hover {
                    text-decoration: none;
            }

            a.header strong {
                    font-size: 22px;
            }

            a.header i {
                    display: block;
                    position: absolute;
                    margin: 0 0 0 -50px;
            }

            a.header i, a.header span {
                    opacity: 0.2;
                    filter: ~"alpha(opacity=20)";
            }

            a.header:hover i, a.header:hover span {
                    opacity: 0.6;
                    filter: ~"alpha(opacity=60)";
            }

            /* Animations */
            form,
            input[type=text],
            input[type=password],
            a.header i,
            a.header span {
                    -webkit-transition: all 0.2s;
                    -moz-transition: all 0.2s;
                    -o-transition: all 0.2s;
                    transition: all 0.2s;
            }
            </style>


    </head>

    <body>

        <section class="signin_container">
            {% block fos_user_content %}{% endblock %}
        </section>

        {% block javascripts %}

        {% javascripts
            "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
            "http://code.jquery.com/ui/1.10.1/jquery-ui.js"
            "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% endblock %}

            <script>
                $(document).ready(function() {
			var updateBoxPosition = function() {
				$('form').css({
					'margin-top': ($(document).height() - $('form').height()) / 2
				});
			};
			$(window).resize(updateBoxPosition);
			updateBoxPosition();
		});

                </script>

    </body>
</html>
