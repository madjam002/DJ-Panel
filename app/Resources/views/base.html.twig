{# Main Template for DJ Panel #}
{# Some useful shorthand variables #}
{% set currPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{% block pagetitle %}DJ Panel{% endblock %} &bull; DJ Panel{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block stylesheets %}
        {% stylesheets
            "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/css/bootstrap-combined.no-icons.min.css"
            "bundles/djpanelmain/css/font-awesome.less"
            "bundles/djpanelmain/css/main.less"
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>

    <body>

        <div id="page-header">
            <div class="container">
                <div class="clearfix">
                    <ul class="nav nav-pills pull-right">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-user"></i> Jamie Greeff <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="profile.html">Your Profile</a></li>
                                <li><a href="form.html">Account Settings</a></li>
                                <li class="divider"></li>
                                <li><a href="">Logout</a></li>
                            </ul>
                        </li>
                    </ul>

                    <h3><i class="icon-bullhorn icon-large"></i> DJ Panel</h3>
                </div>
                <div class="navbar navbar-inverse">
                    <div class="navbar-inner">
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="active"><a href="{{ path("dj_panel_dashboard") }}">Dashboard</a></li>
                                <li><a href="{{ path("dj_panel_show_list") }}">My Shows</a></li>
                                <li><a href="{{ path("dj_panel_timetable") }}">Timetable</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">

            {% block container %}
            <div class="row">
                <div class="span3">
                    <div class="well">
                        <div style="margin-right:20px;float:left"><i class="icon-user icon-3x"></i></div>
                        <strong>Jamie Greeff</strong><br>
                        <a href="#">Settings</a> | <a href="{{ path("fos_user_security_logout") }}">Logout</a>
                    </div>
                    {% block sidebar %}{% endblock %}
                </div>
                <div class="span9">
                    {% block body %}{% endblock %}
                </div>
            </div>
            {% endblock %}

            <hr>

            <footer>
                <p class="pull-right">
                    <a href="#top">Back to top</a>
                </p>
                <p>
                    Designed and Crafted by <a href="http://www.twitter.com/madjam002">@madjam002</a> and loads of awesome contributors
                </p>
                <br>
            </footer>

        </div>

        {% block javascripts %}

        {% javascripts
            "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"
            "http://code.jquery.com/ui/1.10.1/jquery-ui.js"
            "//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.0/js/bootstrap.min.js"
            "bundles/djpanelmain/js/main.js"
        %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% endblock %}

    </body>
</html>
